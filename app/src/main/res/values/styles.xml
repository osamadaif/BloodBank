<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="text_toolbar_title">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/white2</item>
        <item name="android:textColorHint">@color/white2</item>
        <item name="android:textSize">@dimen/dim_30sp</item>
    </style>




    <style name="text_input">
        <item name="android:background">@drawable/background_edit_text</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorAccent_transparent</item>
        <item name="android:layout_marginTop">@dimen/dim_4dp</item>
        <item name="android:layout_marginBottom">@dimen/dim_4dp</item>
        <item name="android:layout_marginStart">@dimen/dim_12dp</item>
        <item name="android:layout_marginEnd">@dimen/dim_12dp</item>
        <item name="android:padding">@dimen/dim_4dp</item>
    </style>

    <style name="text_input_spinner">
        <item name="android:background">@drawable/background_edit_text</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorAccent_transparent</item>
        <item name="android:textSize">@dimen/dim_18sp</item>
        <item name="android:layout_marginTop">@dimen/dim_4dp</item>
        <item name="android:layout_marginBottom">@dimen/dim_4dp</item>
        <item name="android:layout_marginStart">@dimen/dim_4dp</item>
        <item name="android:layout_marginEnd">@dimen/dim_4dp</item>
        <item name="android:padding">@dimen/dim_4dp</item>
    </style>

    <style name="view">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_marginTop">@dimen/dim_4dp</item>
        <item name="android:layout_marginStart">@dimen/dim_8dp</item>
        <item name="android:layout_marginEnd">@dimen/dim_8dp</item>
        <item name="android:padding">@dimen/dim_4dp</item>
    </style>
    <style name="spinner">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:drawablePadding">@dimen/dim_8dp</item>
        <item name="android:textColorHint">@color/colorAccent_transparent</item>
        <item name="android:layout_marginTop">@dimen/dim_4dp</item>
        <item name="android:layout_marginBottom">@dimen/dim_4dp</item>
        <item name="android:paddingStart">@dimen/dim_4dp</item>
        <item name="android:paddingEnd">@dimen/dim_4dp</item>
    </style>
    <style name="bottom_navigation">
        <item name="android:layout_marginStart">@dimen/dim_4dp</item>
        <item name="android:layout_marginEnd">@dimen/dim_4dp</item>
        <item name="android:layout_marginBottom">@dimen/dim_8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
    </style>

    <style name="CheckBoxWhite" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:colorControlNormal">@color/white2</item>
        <item name="android:colorControlActivated">@color/white2</item>
        <item name="android:colorControlHighlight">@color/colorAccent</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
    </style>

    <style name="error_appearance">
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColorHighlight">@color/txt_color2</item>
        <item name="android:textColorHint">@color/txt_color2</item>
        <item name="android:textColorLink">@color/txt_color2</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- To change the label color -->
    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

