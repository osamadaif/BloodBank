<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg_login"
    tools:context=".view.fragment.userCycle.ForgetPasswordStep1Fragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.1"
        android:background="@drawable/bg">

    </ImageView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:background="@drawable/logo_white">

    </ImageView>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/forget_password_fragment_title_phone_number"
        style="@style/text_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:endIconMode="clear_text"
        app:errorTextAppearance="@style/error_appearance">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/forget_password_fragment_txt_phone_number"
            style="@style/text_input_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/phone"
            android:inputType="number"
            android:paddingStart="@dimen/dim_8dp"
            android:paddingEnd="@dimen/dim_8dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/forget_password_fragment_btn_send"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_below="@id/forget_password_fragment_title_phone_number"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dim_24dp"
        android:background="@drawable/background_edit_text"
        android:fontFamily="sans-serif-medium"
        android:paddingStart="@dimen/dim_64dp"
        android:paddingEnd="@dimen/dim_64dp"
        android:text="@string/send"
        android:textColor="@color/colorPrimary">

    </Button>

</RelativeLayout>